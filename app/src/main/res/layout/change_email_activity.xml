<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".ChangeEmailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="277dp"
        android:layout_height="495dp"
        android:layout_margin="@dimen/basic_margin"
        android:background="@color/WhiteColor"
        android:padding="@dimen/basic_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.611">


        <TextView
            style="@style/headWords"
            android:layout_marginTop="60dp"
            android:text="@string/change_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_oldEmail_change_email_activity"
            style="@style/Text_ChangePass_Dell_activity"
            android:layout_marginTop="140dp"
            android:text="@string/text_old_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ET_oldLogin_change_email_activity"
            style="@style/ET_login_activity"
            android:layout_marginTop="3dp"
            android:drawableStart="@drawable/ic_person_"
            android:drawablePadding="@dimen/padding_icon_ET"
            android:hint="@string/login_example2"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:labelFor="@+id/text_oldEmail_change_email_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_oldEmail_change_email_activity" />


        <TextView
            android:id="@+id/text_newEmail_change_email_activity"
            style="@style/Text_ChangePass_Dell_activity"
            android:layout_marginTop="220dp"
            android:text="@string/text_new_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/ET_newEmail_change_email_activity"
            style="@style/ET_login_activity"
            android:drawableStart="@drawable/ic_person_"
            android:drawablePadding="@dimen/padding_icon_ET"
            android:hint="@string/login_example"
            android:inputType="textEmailAddress"
            android:importantForAutofill="yes"
            android:labelFor="@+id/text_newEmail_change_email_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_newEmail_change_email_activity"
            android:autofillHints="@string/password" />

        <Button
            android:id="@+id/BTN_change_email_activity"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="112dp"
            android:text="@string/change_email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>