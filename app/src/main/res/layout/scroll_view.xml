<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/AdFrame"
        android:layout_width="402dp"
        android:layout_height="672dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="83dp"
        android:layout_x="0dp"
        android:layout_y="123dp">

        <TextView
            style="@style/TitleText_settings_activity"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="243dp"
            android:layout_marginBottom="645dp"
            android:text="@string/findJob"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="546dp"
            android:layout_x="4dp"
            android:layout_y="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:showIn="@layout/activity_main">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/sample2"
                    style="@style/scroll_view_icons"
                    android:src="@drawable/ic_cook" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/sample3"
                    style="@style/scroll_view_icons"
                    android:src="@drawable/ic_seller" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/sample4"
                    style="@style/scroll_view_icons"
                    android:src="@drawable/ic_welder" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/sample5"
                    style="@style/scroll_view_icons"
                    android:src="@drawable/ic_loader" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/sample7"
                    style="@style/scroll_view_icons"
                    android:src="@drawable/ic_vk" />
            </LinearLayout>
        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>